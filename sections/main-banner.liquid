{{ 'main-banner.css' | asset_url | stylesheet_tag }}
{{ 'section-breadcrumbs.css' | asset_url | stylesheet_tag }}
<div class="main-banner" style="background-image:url('{{ section.settings.banner_image |  image_url }}');">
  <div class="page-width">
    {% if section.settings.show_breadcrumbs %}
      {% render 'breadcrumbs' %}
    {% endif %}
    <h1>
      {% if section.settings.heading != blank %}
        {{ section.settings.heading | escape }}
      {% else %}
        <span class="visually-hidden">{{ 'sections.collection_template.title' | t }}: </span>
        {{- collection.title | escape -}}
      {% endif %}
    </h1>
    {% if section.settings.content != blank %}
      <div> {{ section.settings.content }} </div>
    {% endif %}
  </div>
</div>
{% schema %}
{
  "name": "Main Banner",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_breadcrumbs",
      "label": "Show Breadcrumbs",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image",
      "info": "Recommended Image Size: 1600 x 300"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    }
  ],
  "presets": [
    {
      "name": "Main Banner",
      "category": "Custom Banner"
    }
  ]
}
{% endschema %}
