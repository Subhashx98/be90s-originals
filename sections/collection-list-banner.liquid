{{ 'collection-list-banner.css' | asset_url | stylesheet_tag }}
{{ 'section-breadcrumbs.css' | asset_url | stylesheet_tag }}
<div class="collection-list-banner">
  <div class="page-width">
    <div class="collection-list-heading">
      {% render 'breadcrumbs' %}
      <h1>
        {% if section.settings.heading != blank %}
          {{ section.settings.heading | escape }}
        {% endif %}
      </h1>
    </div>
  </div>
  <span class="collection-list-banner-img">
    <img
      src="{{ section.settings.banner_image |  image_url }}"
      height="300"
      width="800"
      alt="{{ section.settings.banner_image.alt |  default: section.settings.heading |  default: 'BE90s Originals' }}"
      loading="lazy"
    >
  </span>
</div>
{% schema %}
{
  "name": "Collection List Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image",
      "info": "Recommended Image Size: 1600 x 300"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "presets": [
    {
      "name": "Collection List Banner",
      "category": "Custom Collection"
    }
  ]
}
{% endschema %}
