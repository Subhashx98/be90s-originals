      "id": "button_name",
      "label": "Button Name"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link"
    }
  ],
  "blocks": [
    {
      "type": "accordion_block",
      "name": "Accordion",
      "settings": [
        {
          "type": "text",
          "label": "Title",
          "id": "title"
        },
        {
          "type": "richtext",
          "label": "Description",
          "id": "description"
        }
      ]
    },
    {
      "type": "benifits_cards",
      "name": "List Cards",
      "settings": [
        {
          "type": "image_picker",
          "id": "benifits_block",
          "label": "Image",
          "info": "Recommend Image Size: 30 X 30"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image With Content",
      "category": "Custom About"
    }
  ]
}
{% endschema %}
