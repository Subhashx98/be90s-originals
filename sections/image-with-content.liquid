      "label": "Image Position Right",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "text_alignment",
      "label": "Text Align Center",
      "default": false
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
